<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:layout_marginBottom="0dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/mainScreenCardview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="5dp"
        android:background="@color/colorPrimary">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/driver_image"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:src="@drawable/car_mate"
                android:layout_marginLeft="300dp"
                />

            <TextView
                android:id="@+id/driver_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="drivers info"
                android:textColor="@color/grey"
                android:layout_marginLeft="260dp"/>

        </LinearLayout>


        <RelativeLayout
            android:id="@+id/relative_layout_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:textSize="20dp"
                android:text="Date:"/>

            <TextView
                android:id="@+id/dateInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/date"
                android:textSize="20dp"
                android:textColor="@color/grey"
                android:hint="date published"/>

            <LinearLayout
                android:id="@+id/route_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="15dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/routeId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="invisible"
                        />

                    <TextView
                        android:id="@+id/from"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="From: "/>

                    <TextView
                        android:id="@+id/fromData"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/grey"
                        android:hint="location to pick up"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/to"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="To: "/>

                    <TextView
                        android:id="@+id/toData"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/grey"
                        android:hint="location to arrive"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/people"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="People Interested: "/>

                    <TextView
                        android:id="@+id/peopleData"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/grey"
                        android:hint="# of people interested"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/capacity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Route Capacity: "/>

                    <TextView
                        android:id="@+id/capacityData"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/grey"
                        android:hint="# of people to take"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/interested_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:background="@color/colorSuccess"
                        android:textColor="@color/white"
                        android:layout_marginTop="5dp"
                        android:fontFamily="monospace"
                        android:textSize="15dp"
                        android:text="Going"
                        />

                    <Button
                        android:id="@+id/contact_driver"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:background="@color/infoBlue"
                        android:textColor="@color/white"
                        android:layout_marginTop="5dp"
                        android:fontFamily="monospace"
                        android:textSize="15dp"
                        android:text="Contact"
                        />

                    <Button
                        android:id="@+id/remove_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:background="@color/redDanger"
                        android:textColor="@color/white"
                        android:layout_marginTop="5dp"
                        android:fontFamily="monospace"
                        android:textSize="15dp"
                        android:text="Remove"
                        />


                </LinearLayout>


            </LinearLayout>

        </RelativeLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>
